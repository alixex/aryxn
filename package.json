{
  "name": "aryxn-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "A user-sovereignty-first vault for accounts and permanent files with integrated DEX.",
  "license": "AGPL-3.0-or-later",
  "author": "chaxus",
  "homepage": "https://ranuts.github.io/aryxn/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ranuts/aryxn.git"
  },
  "bugs": {
    "url": "https://github.com/ranuts/aryxn/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "pnpm --filter=@aryxn/web dev",
    "build": "pnpm --filter=@aryxn/web build",
    "build:contracts": "pnpm --filter='@aryxn/contracts-*' build",
    "build:sdk": "pnpm --filter='@aryxn/sdk-*' build",
    "build:all": "pnpm build:contracts && pnpm build:sdk && pnpm build",
    "test:web": "pnpm --filter=@aryxn/web test",
    "test:ethereum": "pnpm --filter=@aryxn/contracts-ethereum test",
    "test:solana": "pnpm --filter=@aryxn/contracts-solana test",
    "test:all": "pnpm test:web && pnpm test:ethereum && pnpm test:solana",
    "deploy:ethereum": "pnpm --filter=@aryxn/contracts-ethereum deploy",
    "deploy:solana": "pnpm --filter=@aryxn/contracts-solana deploy",
    "lint": "pnpm --filter='./apps/*' lint && pnpm --filter='./packages/*' lint",
    "type-check": "pnpm --filter='./apps/*' type-check && pnpm --filter='./packages/*' type-check",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,css,html}'",
    "preview": "pnpm --filter=@aryxn/web preview"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "oxlint": "^1.38.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-wasm": "^3.5.0",
    "vite-tsconfig-paths": "^6.1.1"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@hookform/resolvers": "^3.10.0",
    "@irys/sdk": "^0.2.11",
    "@jup-ag/api": "^6.0.48",
    "@lifi/sdk": "^3.15.6",
    "@lifi/types": "^17.61.0",
    "@mysten/sui": "^1.45.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@rainbow-me/rainbowkit": "^2.2.10",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@sqlite.org/sqlite-wasm": "3.51.1-build2",
    "@tanstack/react-query": "^5.90.16",
    "arweave": "^1.15.5",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^7.0.1",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ecpair": "^3.0.1",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^6.16.0",
    "fflate": "^0.8.2",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "isbot": "^5.1.32",
    "libsodium-wrappers": "^0.8.0",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "playwright": "^1.58.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.2",
    "react-router": "^7.12.0",
    "react-router-dom": "^7.12.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tiny-secp256k1": "^2.2.4",
    "use-debounce": "^10.0.0",
    "viem": "^2.45.0",
    "wagmi": "2.9.0",
    "webextension-polyfill-ts": "^0.25.0",
    "zustand": "^5.0.11"
  }
}
